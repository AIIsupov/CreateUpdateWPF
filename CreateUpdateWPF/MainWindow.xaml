<Window x:Class="CreateUpdateWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreateUpdateWPF"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        
        Title="Создать архив обновления" Height="320" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="235"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <RichTextBox Grid.Row="0" x:Name="richTBx_Sheet" Margin="10,10,10,0" VerticalScrollBarVisibility="Auto"/>
        <Button Grid.Row="1" x:Name="btnCreate" Content="Создать" Margin="5" Click="btnCreate_Click"/>
    </Grid>
</Window>
